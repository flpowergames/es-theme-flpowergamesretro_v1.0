 <theme>

 	 <formatVersion>4</formatVersion>
 	 <include>./../root directory.xml</include>


 	 	 <view name="system">

 	 	 	 <image name="background" extra="true">
 	 	 	 	 <path>./image/bg.jpg</path>
 	 	 	 </image>

 	 	 	 <image name="logo">
 	 	 	 	 <path>./pers/logo.png</path>
 	 	 	 </image>

 	 	 	 <helpsystem name="help">
 	 	 	 	 <textColor>d9dad6</textColor>
 	 	 	 	 <iconColor>d9dad6</iconColor>
 	 	 	 </helpsystem>

 	 	 	 <image name="footer" extra="true">
 	 	 	 	 <path>./../contents/images/signature.png</path>
 	 	 	 </image>

 	 	 	 <image name="lg_retropie" extra="true">
 	 	 	 	 <path>./../contents/images/retropie-person.png</path>
 	 	 	 </image>

 	 	 </view>

 	 	 <view name="basic, detailed, video">

 	 	 	 <image name="background">
 	 	 	 	 <pos>0.5 0.5</pos>
 	 	 	 	 <origin>0.5 0.5</origin>
 	 	 	 	 <size>0 1</size>
 	 	 	 </image>

 	 	 	 <image name="logo">
 	 	 	 	 <path>./pers/logo.png</path>
 	 	 	 </image>

 	 	 	 <image name="footer" extra="true">
 	 	 	 	 <path>./../contents/images/signature.png</path>
 	 	 	 </image>

 	 	 </view>

 	 	 <view name="basic">

 	 	 	 <textlist name="gamelist">
 	 	 	 	 <selectorColor>343434</selectorColor>
 	 	 	 	 <selectorHeight>0.033</selectorHeight>
 	 	 	 	 <selectedColor>ffffff</selectedColor>
 	 	 	 	 <primaryColor>ffffff</primaryColor>
 	 	 	 	 <secondaryColor>ffffff</secondaryColor>
 	 	 	 </textlist>

 	 	 </view>

 	 	 <view name="detailed, video">

 	 	 	 <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
 	 	 	 	 <color>ffffff</color>
 	 	 	 	 <fontPath>./../contents/fonts/PhoenixAyash.ttf</fontPath>
 	 	 	 	 <fontSize>0.02</fontSize>
 	 	 	 	 <alignment>left</alignment>
 	 	 	 	 <forceUppercase>1</forceUppercase>
 	 	 	 </text>

 	 	 	 <text name="md_developer, md_publisher, md_genre, md_players, md_playcount, md_name">
 	 	 	 	 <color>ffffff</color>
 	 	 	 	 <fontPath>./../contents/fonts/PhoenixAyash.ttf</fontPath>
 	 	 	 	 <fontSize>0.02</fontSize>
 	 	 	 	 <alignment>left</alignment>
 	 	 	 	 <forceUppercase>1</forceUppercase>
 	 	 	 </text>

 	 	 	 <datetime name="md_releasedate, md_lastplayed">
 	 	 	 	 <size>0.128 0.026</size>
 	 	 	 	 <color>ffffff</color>
 	 	 	 	 <fontPath>./../contents/fonts/PhoenixAyash.ttf</fontPath>
 	 	 	 	 <fontSize>0.02</fontSize>
 	 	 	 	 <alignment>left</alignment>
 	 	 	 	 <forceUppercase>1</forceUppercase>
 	 	 	 </datetime>

 	 	 	 <rating name="md_rating">
 	 	 	 	 <filledPath>./../contents/pers/star_filled.svg</filledPath>
 	 	 	 	 <unfilledPath>./../contents/pers/star_empty.svg</unfilledPath>
 	 	 	 </rating>

 	 	 </view>
 


 </theme>
